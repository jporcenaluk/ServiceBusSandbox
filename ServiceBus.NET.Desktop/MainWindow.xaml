<Window x:Class="ServiceBus.NET.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServiceBus.NET.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="Message To Send" HorizontalAlignment="Left" Margin="70,24,0,0" VerticalAlignment="Top" Height="31"/>
        <TextBox Name="MessageToSend" Margin="70,55,311,237"></TextBox>
        <Button Name="SendMessage" Content="Send Message" HorizontalAlignment="Left" Margin="70,106,0,0" VerticalAlignment="Top" Width="136" Click="SendMessage_Click"/>
        
        <Label Content="Sent" HorizontalAlignment="Left" Margin="238,24,0,0" VerticalAlignment="Top" Height="31"/>
        <ListBox x:Name="MessagesSent" HorizontalAlignment="Left" Height="71" Margin="238,55,0,0" VerticalAlignment="Top" Width="219"/>        
        
        <Label Content="Received" HorizontalAlignment="Left" Margin="238,140,0,0" VerticalAlignment="Top" Height="31"/>
        <ListBox x:Name="MessagesReceived" HorizontalAlignment="Left" Height="71" Margin="238,171,0,0" VerticalAlignment="Top" Width="219"/>
    </Grid>
</Window>
